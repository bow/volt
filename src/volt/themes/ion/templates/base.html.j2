<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    {%- for output in site.select_outputs("*.css") %}
    <link rel="stylesheet" href="{{ output.url }}" />
    {%- endfor %}
    {%- if meta.title %}
    <title>{{ config.name }} - {{ meta.title }}</title>
    {%- else %}
    <title>{{ config.name }}</title>
    {%- endif %}
  </head>
  <body>
    {% block content %}{% endblock %}
  </body>
</html>
